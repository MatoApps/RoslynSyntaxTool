<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:Workshop.Converter"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:control="clr-namespace:Workshop.Control"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
	<system:Double x:Key="LargeFontSize">22</system:Double>

	<system:Double x:Key="SmailFontSize">12</system:Double>
	<Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Thickness Left="20" Right="20"  Top="0"  Bottom="0" x:Key="DefaultMargin"></Thickness>
</ResourceDictionary>

